<div class="card m-auto mt-2 d-block" style="width: 40rem;">
  <form id="comment-form" class="row g-2 m-auto">
    <label for="content">Comment as {{username}}</label>
    <textarea
      id="commentInput"
      name="content"
      placeholder="What are your thoughts?"
    ></textarea>
    <button class="btn btn-info" id="commentBtn" data-id="{{post.id}}">Comment</button>
    <p id="alert" style="color: red;"></p>
  </form>
</div>

<div class="card m-auto mt-3 d-block" style="width: 40rem;">
<h3>Comments</h3>
{{#if post.comments.length}}
  
  {{#each post.comments}}
    <ul class="list-group list-group-flush">
      <li class="list-group-item">By: {{this.commentAuthor}} on
      {{format_date this.createdAt}}
      <br>
      {{this.content}}</li>
    
  {{/each}}
{{else}}
  <li class="list-group-item">No comments yet.</li>
{{/if}}

</ul>
</div>

<script src="/js/forum.js"></script>