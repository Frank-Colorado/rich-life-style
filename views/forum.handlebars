{{! Posts written by users (with usernames) will be dsplayed here. }}
<div>
  <p>Posted by: {{post.user.username}} on {{post.createdAt}}</p>
  <h1>{{post.title}}</h1>
  <p>{{post.content}}</p>
</div>
<div>
  <form id="comment-form">
    <label for="content">Comment as {{username}}</label>
    <textarea
      id="commentInput"
      name="content"
      placeholder="What are your thoughts?"
    ></textarea>
    <button id="commentBtn" data-id="{{post.id}}">Comment</button>
    <p id="alert" style="color: red;"></p>
  </form>
</div>

{{#if post.comments.length}}
  <h3>Comments</h3>
  {{#each post.comments}}
    <div>
      <p>{{this.content}}</p>
      <p>By: {{this.commentAuthor}}</p>
      <p> {{this.createdAt}}</p>
    </div>
  {{/each}}
{{else}}
  <p>No comments yet.</p>
{{/if}}

