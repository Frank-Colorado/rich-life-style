<div class="card-container">
  <div id="comment-form">
    <textarea
      id="commentInput"
      class="dream-card"
      name="content"
      placeholder="What are your thoughts?"
      style="width: 700px; height: 100px;"
    ></textarea>
    <div class="text-end">
      <p id="alert" style="color: red;" class="me-3"></p>
      <label for="content">Comment as {{username}}</label>
      <button
        class="btn btn-info me-3"
        id="commentBtn"
        data-id="{{post.id}}"
      >Comment</button>
    </div>
  </div>

</div>

