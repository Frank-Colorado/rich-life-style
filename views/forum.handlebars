{{! Posts written by users (with usernames) will be dsplayed here. }}
<div class="card-container">
  <div id="post">
    <div class="dream-card">
      <div class="dream-card-header">
        <h1 class="dream-card-title">{{post.title}}</h1>
        <p class="dream-card-details">Posted by:
          {{post.author}}
          on
          {{format_date post.createdAt}}</p>
      </div>
      <div class="dream-card-divider"></div>

      <p class="dream-card-content">{{post.content}}</p>
    </div>
  </div>
</div>

