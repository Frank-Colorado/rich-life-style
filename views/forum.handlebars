<div class="card-container mt-5">
  <h3>Comments</h3>
  {{#if post.comments.length}}
    {{#each post.comments}}
      <div class="dream-card" style="width: 700px; height: 100px;">
        <div class="d-flex">
          <div>
            <h3>{{this.commentAuthor}}</h3>
            <p class="dream-card-details">Posted on
              {{format_date this.createdAt}}</p>
          </div>
        </div>
        <div>{{this.content}}</div>
      </div>
    {{/each}}
  {{else}}
    <h3 class="mt-5">No comments yet...</h3>
  {{/if}}

</div>

